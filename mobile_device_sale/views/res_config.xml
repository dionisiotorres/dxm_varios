        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div data-key="sale_management" position="inside">
                <h2 class="col-xs-12">Mobile Device Sale Options</h2>
                <div class="row mt16 o_settings_container mb32">

                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div>
                                <label for="delivery_op_type"/>
                                <div class="text-muted">
                                    Picking type for delivery operations
                                </div>
                            </div>
                            <div>
                               <field name="delivery_op_type"/>
                            </div>
                        </div>

                </div>
            </div>
        </field>
    </record>

</odoo>