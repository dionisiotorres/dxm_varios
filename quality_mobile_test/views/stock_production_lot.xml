<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_production_lot_quality_test" model="ir.ui.view">
        <field name="name">stock.production.lot.quality.test</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page" position="after">
                <page string="Quality Tests">
                    <group>
                        <field name="functional_test" readonly="1"/>
                    </group>
                    <group>
                        <field name="esthetic_test" readonly="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>