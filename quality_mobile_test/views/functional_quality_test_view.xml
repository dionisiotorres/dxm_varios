<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="action_functional_test_view" model="ir.actions.act_window">
        <field name="name">Functional Test View</field>
        <field name="res_model">functional.quality.test</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="functional_quality_test_view_form" model="ir.ui.view">
        <field name="name">functional.quality.test.view.form</field>
        <field name="model">functional.quality.test</field>
        <field name="arch" type="xml">
            <form string=" Functional Test" edit="0" create="0">
                <sheet>
                    <group>
                        <group>
                            <field name="power_on"/>
                            <field name="speaker"/>
                            <field name="buttons"/>
                            <field name="fingerprint_reader"/>
                            <field name="torch"/>
                            <field name="bluetooth"/>
                            <field name="wifi"/>
                            <field name="proximity_sensor"/>
                        </group>
                        <group>
                            <field name="touch_screen"/>
                            <field name="display_bright"/>
                            <field name="call_test"/>
                            <field name="ring_tone"/>
                            <field name="camera"/>
                            <field name="mobile_os"/>
                            <field name="user_account"/>
                            <field name="security_pattern"/>
                            <field name="humidity"/>
                        </group>
                        <group>
                            <field name="create_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>