<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_id_name" model="ir.ui.view">
        <field name="name">view.id.name</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <field name="show_f_test" invisible="1"/>
                <field name="show_e_test" invisible="1"/>
                <field name="functional_test_done" invisible="1"/>
                <field name="esthetic_test_done" invisible="1"/>
                <button name="run_functional_test" type="object" string="Run Functional Test"
                attrs="{'invisible': [('show_f_test', '=', False)]}"/>
                <button name="run_esthetic_test" type="object" string="Run Esthetic Test"
                attrs="{'invisible': [('show_e_test', '=', False)]}"/>
            </xpath>
        </field>
    </record>

</odoo>