<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_run_esthetic_test" model="ir.actions.act_window">
        <field name="name">Run Esthetic Test</field>
        <field name="res_model">mobile.esthetic.test.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="mobile_esthetic_test_wizard" model="ir.ui.view">
        <field name="name">mobile.esthetic.test.wizard</field>
        <field name="model">mobile.esthetic.test.wizard</field>
        <field name="arch" type="xml">
            <form string=" Mobile Functional Test">
                <sheet>
                    <group>
                        <group string="Grade">
                            <field name="display_test"/>
                            <field name="case_test"/>
                        </group>
                        <group>
                            <field name="device_case" attrs='{"invisible": ["|", ("display_test", "!=", "10"), ("case_test", "!=", "10")]}'/>
                            <field name="charger" attrs='{"invisible": ["|", ("display_test", "!=", "10"), ("case_test", "!=", "10")]}'/>
                            <field name="cables" attrs='{"invisible": ["|", ("display_test", "!=", "10"), ("case_test", "!=", "10")]}'/>
                            <field name="headset" attrs='{"invisible": ["|", ("display_test", "!=", "10"), ("case_test", "!=", "10")]}'/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lots to Apply This Test">
                            <label for="lot_id" string="Search Lot ID"/>
                             <field name="lot_id" style="width: 30%%"/>
                            <field name="serial_file" style="width: 30%%; margin-left: 20px;" string="Select Lots File"/>
                            <field name="move_ids">
                                <tree>
                                    <field name="lot_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="process_test"
                                string="Process Test"
                                type="object"
                                class="oe_highlight" />
                    <button special="cancel" name='cancel' string="Cancel Test" />
                </footer>
            </form>
        </field>
    </record>
</odoo>