<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_inherited_brand" model="ir.ui.view">
        <field name="name">product.template.inherited.brand</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_title')]/h1" position="after">
                <label for="product_brand_id" string="Product Brand" style="margin-bottom: 20px;"/>
                <field name="product_brand_id" style="margin-bottom: 20px;"/>
            </xpath>
        </field>
    </record>
</odoo>