<odoo>
    <data noupdate="0">

        <!-- Activate Ecommerce Categories -->
        <record id="website_sale.products_categories" model="ir.ui.view">
            <field name="active" eval="True"/>
        </record>

        <!-- Activate Product Description -->
        <record id="website_sale.products_description" model="ir.ui.view">
            <field name="active" eval="True"/>
        </record>

        <!-- Activate Add to Cart -->
        <record id="website_sale.products_add_to_cart" model="ir.ui.view">
            <field name="active" eval="True"/>
        </record>

        <!-- Activate List View -->
        <record id="website_sale.products_list_view" model="ir.ui.view">
            <field name="active" eval="True"/>
        </record>

        <!-- Activate Collapsible Category List -->
        <record id="website_sale.option_collapse_products_categories" model="ir.ui.view">
            <field name="active" eval="True"/>
        </record>

        <!-- Activate Product Attribute's Filters -->
        <record id="website_sale.products_attributes" model="ir.ui.view">
            <field name="active" eval="True"/>
        </record>

        <!-- Activate Search Count -->
        <record id="website_sale.search_count_box" model="ir.ui.view">
            <field name="active" eval="True"/>
        </record>

        <!-- Activate Discussion and Rating -->
        <record id="website_sale.product_comment" model="ir.ui.view">
            <field name="active" eval="True"/>
        </record>

    </data>
</odoo>
