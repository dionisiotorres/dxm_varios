<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <act_window id="act_serial_batch_import"
            name="Serial Batch Import"
            res_model="serial.import.wizard"
            view_mode="form"
            binding_model="stock.picking"
            binding_views="form"
            target="new"/>

        <record id="action_serial_batch_import" model="ir.actions.act_window">
            <field name="name">Serial Batch Import</field>
            <field name="res_model">serial.import.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="serial_batch_import_form" model="ir.ui.view">
            <field name="name">serial.batch.import.form</field>
            <field name="model">serial.import.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Import Serial Batch" >
                      <sheet>
                        <group>
                            <group>
                                <field name='serial_file'/>
                                <field name='product_id'/>
                                <field name='company_id' widget='selection' context="{'search_default_company_id': company_id}"/>
                            </group>
                            <group name='extra_info'>
                                <field name='color'/>
                                <field name='lock_status'/>
                                <field name='logo'/>
                                <field name='charger'/>
                                <field name='network_type'/>
                                <field name='lang'/>
                                <field name='memory'/>
                                <field name='sim_type'/>
                                <field name='display'/>
                                <field name='release'/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="import_serial"
                            string="Import"
                            type="object"
                            class="oe_highlight" />
                        <button special="cancel" name='cancel' string="Cancel" />
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>